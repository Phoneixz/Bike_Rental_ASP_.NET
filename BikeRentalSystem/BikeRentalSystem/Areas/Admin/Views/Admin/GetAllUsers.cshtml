@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h3 class="fw-normal fs-4 mb-4">Users: </h3>

<div class="card-deck">
    @foreach (var user in Model)
    {
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-subtitle mb-2 text-muted font-weight-bold">Id: @user.Id</h5>
                <h4 class="card-title font-weight-bold">@user.Email</h4>
                <div class="btn-group" role="group">
                    <form method="post" action="@Url.Action("AdminRoleSet","Admin", new {area="Admin"})">
                        <input type="hidden" name="userId" value="@user.Id"/>
                        <button type="submit" class="btn btn-sm btn-success">Set as Admin</button>
                    </form>
                    <form method="get" action="@Url.Action("Index","Reservation", new {userId = user.Id, area=""})">
                        <button type="submit" class="btn btn-sm btn-primary">View reservations</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card-deck {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card {
        width: 18rem;
        margin: 1rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .card:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            transform: translateY(-5px);
        }

    .card-subtitle {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        color: #6c757d;
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: #007bff;
    }

    .text-primary {
        color: #007bff;
    }

    .fw-normal {
        font-weight: normal;
    }

    .fs-4 {
        font-size: 1.1rem;
    }
</style>
