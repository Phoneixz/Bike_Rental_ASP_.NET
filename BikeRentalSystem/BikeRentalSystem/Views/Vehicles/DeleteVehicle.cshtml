@model BikeRentalSystem.ViewModels.VehicleDetailViewModel

@{
    ViewData["Title"] = "Deleting vehicle";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Are you sure you want to delete this vehicle?</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4>Vehicle Details</h4>
                    <hr />
                    <img src="@Url.Content(Model.ImgURL)" class="card-img-top" alt="@Model.Make">
                    <dl class="row">
                        <dt class="col-sm-3">Make</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Make)</dd>
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ImgURL)</dd>
                        <dt class="col-sm-3">Vehicle Type</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.VehicleTypeId)</dd>
                        <dt class="col-sm-3">Availability</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Availability)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="DeleteVehicle">
                <input type="hidden" asp-for="Id" />
                <button type="submit" asp-action="Delete" class="btn btn-danger">Delete</button> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </form>
        </div>
    </div>
</div>
