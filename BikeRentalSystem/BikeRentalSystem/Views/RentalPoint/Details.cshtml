@model BikeRentalSystem.Models.RentalPoint

@{
    ViewData["Title"] = "Rental point details";
}

<h1>Rental point details</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2>@Model.Name</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Vehicles</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.Address</td>
                            <td>@Model.vehicles</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a> |
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
</div>
