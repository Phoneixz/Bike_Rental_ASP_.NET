@model BikeRentalSystem.ViewModels.RentalPointDetailViewModel

@{
    ViewData["Title"] = "Deleting rental point";
}

<h1>Deleting rental point</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="card mt-5">
    <div class="card-body">
        <h4>RentalPoint</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
        </dl>
        <div class="mt-5 d-flex justify-content-end">
            <a href="@Url.Action("Index")" class="btn btn-primary ms-3">Back to List</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" asp-action="DeleteRentalPoint" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
