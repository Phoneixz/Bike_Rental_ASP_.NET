@{
    ViewData["Title"] = "UBB Bike Rental System";
}
@model IEnumerable<BikeRentalSystem.Models.Vehicle>
<div class="container">

    <section id="TitleText">
        <h1 class="text-center">UBB Bike Rental System</h1>
    </section>

    <section id="description">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <h3 class="desctext">Explore Bielsko-Biała on Two Wheels</h3>
                <p class="lead mt-4">
                    Welcome to UBB Bike Rental System! We offer a convenient and affordable way to explore the beautiful city of Bielsko-Biała on two wheels. Whether you're a local looking for a fun day out or a tourist wanting to see the sights, we have the perfect vehicle for you.
                </p>
                <p class="lead mt-4">
                    Our fleet of bikes, scooters and more are well-maintained and easy to ride. We have a variety of sizes and styles to suit any preference, from sleek road bikes to comfortable cruisers. Plus, with our easy online booking system, reserving your vehicle is a breeze.
                </p>
            </div>
        </div>

        <!-- Gallery -->
        <div class="row mt-5">
            <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                <img src="https://p.turbosquid.com/ts-thumb/A7/Ed2YIb/5k/0preview/jpg/1631874679/600x600/fit_q87/21fb24671593244dc20efde36b346d2b6b983d1a/0preview.jpg"
                     class="w-100 shadow-1-strong rounded mb-4"
                     alt="Boat on Calm Water" />
            </div>

            <div class="col-lg-4 mb-4 mb-lg-0">
                <img src="https://embassybikes.com/1772-home_default/city-bike-baby-powder-28.jpg"
                     class="w-100 shadow-1-strong rounded mb-4"
                     alt="Mountains in the Clouds" />
            </div>

            <div class="col-lg-4 col-md-16 mb-4 mb-lg-0">
                <img src="https://proline.pl/pic/mi-electric-scooter-1s_1.jpg"
                     class="w-100 shadow-1-strong rounded mb-4"
                     alt="Wintry Mountain Landscape" />
            </div>
        </div>
        <!-- Gallery -->
    </section>

</div>
